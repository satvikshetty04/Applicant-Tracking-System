<p id="notice"><%= notice %></p>

<% provide(:title, "Menu") %>

<div class="jumbotron" style="text-align: center">
  <h2>What would you like to do?</h2>
  <br/>

  <% if current_user.is_admin? %>
    <%= link_to "Create new user", users_new_path  , class: "btn btn-md btn-primary"%>
    <br/><br/>
    <%= link_to "View all users", users_url  , class: "btn btn-md btn-primary"%>
    <br/><br/>
  <% end %>

  <% if current_user.is_recruiter? %>
    <% if current_user.company_id==nil %>
      <i style="color: #cc0000">Please add a company by <%= link_to "editing your profile", edit_user_registration_path %> to post jobs.</i>
    <%else%>
      <%= link_to "Post new job", new_job_url  , class: "btn btn-md btn-primary"%>
    <% end %>
    <br/><br/>
  <% end %>

  <% if current_user.is_recruiter? || current_user.is_admin?%>
    <%= link_to "Create new company", new_company_url  , class: "btn btn-md btn-primary"%>
    <br/><br/>
    <%= link_to "View all applications", applications_url  , class: "btn btn-md btn-primary"%>
    <br/><br/>
  <%end%>

  <%= link_to "View all posted Jobs", jobs_url  , class: "btn btn-md btn-primary"%>
  <br/><br/>
  <%= link_to "Search jobs by filter", jobs_url  , class: "btn btn-md btn-primary"%>
  <br/><br/>
  <%= link_to "View all Companies", companies_path  , class: "btn btn-md btn-primary"%>
  <br/><br/>

  <% if current_user.is_applicant?%>
    <%= link_to "View jobs I have applied to", applications_url  , class: "btn btn-md btn-primary"%>
  <% end %>
</div>