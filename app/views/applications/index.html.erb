<p id="notice"><%= notice %></p>

<h1>Applications</h1>

<table class = "table table-bordered table-striped">
  <thead>
    <tr>
      <th>Job ID</th>
      <th>User</th>
      <th>Current company</th>
      <th>Linkedin url</th>
      <th>Portfolio url</th>
      <th>Add info</th>
      <th>Gender</th>
      <th>Race</th>
      <th>Veteran</th>
      <th>Disability</th>
      <th>Resume</th>
      <th>Application Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applications.each do |application| %>
      <tr>
        <td><%= application.job_id %></td>
        <td><%= User.find(application.user_id).fname %></td>
        <td><%= application.current_company %></td>
        <td><%= application.linkedin_url %></td>
        <td><%= application.portfolio_url %></td>
        <td><%= application.add_info %></td>
        <td><%= application.gender %></td>
        <td><%= application.race %></td>
        <td><%= application.veteran %></td>
        <td><%= application.disability %></td>
        <td><%= link_to "Download Resume", application.resume_url %></td>
        <td><%= application.application_status %></td>
        <td><%= link_to 'Show', application %></td>
        <td><%= link_to 'Edit', edit_application_path(application) %></td>
        <td><%= link_to 'Delete', application, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

