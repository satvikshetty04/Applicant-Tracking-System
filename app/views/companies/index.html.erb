<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<table class = "table table-bordered table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Website</th>
    <th>Headquarters</th>
    <th>Size</th>
    <th>Founded</th>
    <th>Industry</th>
    <th>Revenue</th>
    <th>Synopsis</th>
    <th>Options</th>
  </tr>
  </thead>

  <tbody>
  <% @companies.each do |company| %>
    <tr>
      <td><%= company.name %></td>
      <td><%= company.website %></td>
      <td><%= company.headquarters %></td>
      <td><%= company.size %></td>
      <td><%= company.founded %></td>
      <td><%= company.industry %></td>
      <td><%= company.revenue %></td>
      <td><%= company.synopsis %></td>
      <td><%= link_to 'Show', company %>
      <% if current_user.is_admin || (current_user.is_recruiter && current_user.company_id == company.id)%>
        | <%= link_to 'Edit', edit_company_path(company) %>
      <% end %>
      <% if current_user.is_admin %>
        | <%= link_to 'Delete', company, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
<% if not current_user.is_applicant %>
  <%= link_to 'New Company', new_company_path %>
<% end %>